<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!-- Style für alle Textblöcke -->
    <Style TargetType="{x:Type TextBlock}">
        <Setter Property="Margin" Value="2" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <!-- Style für all Textblöcke -->
    <Style x:Key="txbH1" TargetType="{x:Type TextBlock}">
        <Setter Property="Margin" Value="2" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>



    <!-- Style für alle Textboxen -->
    <Style x:Key="txbSearch" TargetType="{x:Type TextBox}">
        <Setter Property="Margin" Value="2" />
        <Setter Property="MinWidth" Value="300" />
        <Setter Property="MaxWidth" Value="600" />
    </Style>

    <Style x:Key="lblH1" TargetType="{x:Type Label}">
        <Setter Property="Margin" Value="2" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>



</ResourceDictionary>