<Window x:Class="Swd.Forecast.Gui.Admin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Swd.Forecast.Gui.Admin"
        mc:Ignorable="d" Title="Forecast" Background="#FF63BBD2" Width="800" Height="600" WindowStartupLocation="CenterScreen">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" Grid.ColumnSpan="3">
            <Button x:Name="btnRead"  Content="Lesen" Width="120" Height="35" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10 0 0 0" Click="btnRead_Click" />
            <Button x:Name="btnExit" Content="Quit" Width="120" Height="35" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10 0 0 0" />
        </StackPanel>
        <DataGrid x:Name="dgMeasuredData" Grid.Row="1" Grid.ColumnSpan="3" AutoGenerateColumns="False" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding id}" />
                <DataGridTextColumn Header="Value" Binding="{Binding MeasuredValue}"/>
                <DataGridTextColumn Header="Date" Binding="{Binding MeasuredDateTime}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
